<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.ucsd.teambookv1"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/teambook_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="edu.ucsd.teambookv1.LoginActivity"
            android:parentActivityName="edu.ucsd.teambookv1.MainActivity"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.ucsd.teambookv1.ClassListView"
            android:label="@string/title_activity_class_list_view" >
        </activity>
        <activity
            android:name="edu.ucsd.teambookv1.MainListView"
            android:label="@string/title_activity_main_list_view" >
        </activity>
        <activity
            android:name="edu.ucsd.teambookv1.MainList"
            android:label="@string/title_activity_main_list" >
        </activity>
        <activity
            android:name="edu.ucsd.teambookv1.SettingsView"
            android:label="@string/title_activity_settings_view" >
        </activity>
        <activity
            android:name="edu.ucsd.teambookv1.PicturesActivity"
            android:label="@string/title_activity_picture" >
        </activity>
        <activity
            android:name="edu.ucsd.teambookv1.TeamActivity"
            android:label="@string/title_activity_team" >
        </activity>
        <activity
            android:name="edu.ucsd.teambookv1.TeamMemberActivity"
            android:label="@string/title_activity_team_member" >
        </activity>
        <activity
            android:name="edu.ucsd.teambookv1.InvitesActivity"
            android:label="@string/title_activity_invites" >
        </activity>
        <activity
            android:name="edu.ucsd.teambookv1.NotesActivity"
            android:label="@string/title_activity_notes" >
        </activity>
        <activity
            android:name="edu.ucsd.teambookv1.NotesView"
            android:label="@string/title_activity_notes_view" >
        </activity>
    </application>

</manifest>